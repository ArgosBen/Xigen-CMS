<h1>Create User</h1>

<%= form_for :user, url: users_path do |f| %>

	<% if @user && @user.errors.any? %>
		<% @user.errors.full_messages.each do |msg| %>
			<strong><%= msg %></strong><br/>
		<% end %>
	<% end %>

	<%= f.label :email %>:
	<%= f.text_field :email %><br/>

	<%= f.label :password %>:
	<%= f.password_field :password %><br/>

	<%= f.submit "Create user" %>

<% end %>